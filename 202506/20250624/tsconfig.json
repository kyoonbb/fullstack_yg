{ // 각각 옵션 설명을 그렇게 중요하진 않음
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
        "@/*":["src/*"],
        "$/*":["components/*"]
      }
    },
    "include":["src","components"]
}
  